# Servidor
PORT=4000
NODE_ENV=development

# Banco de Dados PostgreSQL
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=sua_senha_aqui
DB_NAME=talentmatch

# JWT - IMPORTANTE: Use uma chave forte em produção (mínimo 32 caracteres)
JWT_SECRET=sua_chave_secreta_super_segura_aqui_minimo_32_caracteres
JWT_ACCESS_EXPIRATION=15m
JWT_REFRESH_EXPIRATION=7d

# CORS - URL do frontend
# CORS settings
# You can specify multiple origins separated by commas.
# If not set, the server will allow any localhost/127.0.0.1 origin by default (dev only).
# Examples:
# CORS_ORIGIN=http://localhost:5173
# CORS_ORIGIN=http://localhost:5173,http://localhost:8080
CORS_ORIGIN=

# OpenAI API (opcional para MVP, necessário para análise de currículos)
OPENAI_API_KEY=sk-proj-...

# GitHub API (opcional, para análise de perfis GitHub)
GITHUB_TOKEN=ghp_...

# Upload de Arquivos
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=10485760

# Rate Limiting (proteção contra ataques)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
